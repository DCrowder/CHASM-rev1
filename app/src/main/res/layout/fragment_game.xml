<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context=".GameActivity"
              android:id="@+id/campaign">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="9"
        android:rowCount="9"
        android:id="@+id/LevelGrid"
        android:layout_gravity="center_vertical|center_horizontal">


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/command_console"
        android:orientation="vertical"

        android:layout_gravity="bottom"
        android:gravity="bottom|center_horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commands_top"
            android:layout_gravity="center"
            android:gravity="center_horizontal">
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/command7"
            android:rotation="135"
            app:srcCompat="@android:drawable/arrow_down_float"/>
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/command8"
            android:rotation="180"
            app:srcCompat="@android:drawable/arrow_down_float"/>
        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/command9"
            android:rotation="225"
            app:srcCompat="@android:drawable/arrow_down_float"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commands_mid"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/command4"
                app:srcCompat="@android:drawable/arrow_down_float"
                android:rotation="90"
                />

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/command5"
                app:srcCompat="@android:drawable/stat_sys_download_done"
                android:rotation="180"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/command6"
                app:srcCompat="@android:drawable/arrow_down_float"
                android:rotation="270"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commands_bottom"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/command1"
                app:srcCompat="@android:drawable/arrow_down_float"
                android:rotation="45"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/command2"
                app:srcCompat="@android:drawable/arrow_down_float"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/command3"
                app:srcCompat="@android:drawable/arrow_down_float"
                android:rotation="315"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/commands_down"
            android:layout_gravity="center"
            android:gravity="center_horizontal">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/command0"
                app:srcCompat="@android:drawable/stat_sys_download_done"
                />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>